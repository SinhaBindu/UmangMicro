@using System.Data
@{
    ViewBag.Title = "User List";
    DataTable dt = new DataTable();
    if (Model != null)
    {
        dt = Model;
    }
}
<strong>Scholarships</strong>
<div class="row row-deck">
    <div class="col-lg-12 col-md-12">
        <div class="card">
            <div class="table-responsive">
                <table class="table table-bordered table-hover dt-responsive display tbl" id="DataListSSP" width="100%">
                    <thead>
                        <tr>
                            @*<th>SrNo.</th>*@
                            <th></th>
                            <th>Name of Scholarship</th>
                            <th>Category</th>
                            <th>Eligibility</th>
                            <th>Institutions Eligibility</th>
                            <th>Remarks</th>
                            <th>Amount</th>
                        </tr>
                    </thead>
                    <tbody>
                        @{
                            int sno = 1; int indx = 0;
                            if (Model != null)
                            {
                                foreach (DataRow dr in dt.Rows)
                                {
                                    <tr>
                                        @*<td class="text-center">@(sno++)</td>*@
                                        <td class="text-center">
                                            <input type="checkbox" data-id="@dr["CH_Id"]" name="Chk_@indx" id="Chk_@indx" value="@dr["ID"]" />
                                        </td>
                                        <td class="text-left" style="text-wrap: wrap;">@dr["NameScholarship"]</td>
                                        <td class="text-left" style="text-wrap: wrap;">@dr["Category"]</td>
                                        <td class="text-left" style="text-wrap: wrap;">@dr["Eligibility"]</td>
                                        <td class="text-left" style="text-wrap: wrap;">@dr["InstitutionsEligibility"]</td>
                                        <td class="text-left" style="text-wrap: wrap;">@dr["Remarks"]</td>
                                        <td class="text-left" style="text-wrap: wrap;">@dr["Amount"]</td>
                                    </tr>
                                    indx++;
                                }
                            }
                            else
                            {
                                <tr><td colspan="7" class="text-danger"><strong> Record Not Found !!</strong></td></tr>
                            }
                        }

                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>
