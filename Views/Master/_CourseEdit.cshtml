@using System.Data
@{
    ViewBag.Title = "User List";
    DataTable dt = new DataTable();
    if (Model != null)
    {
        dt = Model;
    }
}

<div class="row row-deck">
    <div class="col-lg-12 col-md-12">
        <div class="card">
            <div class="table-responsive">
                <table class="table card-table table-vcenter text-nowrap small" id="DataList">
                    <thead>
                        <tr>
                            <th>SrNo.</th>
                            <th>Name of the Course</th>
                            <th>Course Type</th>
                            <th>Job Opportunity</th>
                            <th>Course Duration</th>
                            <th>Eligibility</th>
                            <th>Marks Criteria</th>
                            <th>Admission Process</th>
                            <th>Medium of Instructions</th>
                            <th>District</th>
                            <th>Modify</th>
                        </tr>
                    </thead>
                    <tbody>
                        @{
                            int sno = 1;
                            if (Model != null)
                            {
                                foreach (DataRow dr in dt.Rows)
                                {
                                    <tr>
                                        <td class="text-center">@(sno++)</td>
                                        <td class="text-left">@dr["NameCourseEng"]</td>
                                        <td class="text-left">@dr["CourseTypeEng"]</td>
                                        <td class="text-left">@dr["JobOpportunityEng"]</td>
                                        <td class="text-left">@dr["CourseDurationEng"]</td>
                                        <td class="text-left">@dr["EligibilityEng"]</td>
                                        <td class="text-left">@dr["MarksCriteriaEng"]</td>
                                        <td class="text-left">@dr["AdmissionProcessEng"]</td>
                                        <td class="text-left">@dr["MediumInstructionEng"]</td>
                                        <td class="text-left">@dr["DistName"]</td>
                                        <td title="Edit">
                                            <a href="~/Master/CourseD?id=@dr["Id"]" style='font-size: medium;'>Edit <i class="fa fa-edit"></i></a>
                                        </td>
                                    </tr>
                                }
                            }
                            else
                            {
                                <tr><td colspan="10" class="text-danger"><strong> Record Not Found !!</strong></td></tr>
                            }
                        }

                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>
