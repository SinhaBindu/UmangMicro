@{
    ViewBag.Title = "Home Page";
}
<!-- Banner -->
<link rel='stylesheet' href='/Content/css/settings4361.css?rev=4.1.3&amp;ver=3.9' type='text/css' />
<script type='text/javascript' src='/Content/js/plugins/jquery.themepunch.plugins.min4361.js?rev=4.1.3&amp;ver=3.9'></script>
<script type='text/javascript'
        src='/Content/js/plugins/jquery.themepunch.revolution.min4361.js?rev=4.1.3&amp;ver=3.9'></script>
<!-- Banner -->
<div class="main-banner">
    <div id="rev_slider_3_1_wrapper" class="rev_slider_wrapper fullwidthbanner-container"
         style="margin:0px auto; background-color:#E9E9E9; padding:0px; margin-top:0px; margin-bottom:0px; max-height:520px; height:520px; position:relative">
        <div id="rev_slider_3_1" class="rev_slider fullwidthabanner"
             style="display:none; max-height:520px; height:520px;">
            <ul>
                <li data-transition="random" data-slotamount="7" data-masterspeed="300">
                    <img src="~/Content/images/slider/umang-banner.jpg" alt="" data-bgposition="center top" data-bgfit="cover"
                         data-bgrepeat="no-repeat">
                </li>
                <li data-transition="random" data-slotamount="7" data-masterspeed="300">
                    <img src="/Content/images/slider/slide-1.jpg" alt="" data-bgposition="center top" data-bgfit="cover"
                         data-bgrepeat="no-repeat">
                </li>
                <li data-transition="random" data-slotamount="7" data-masterspeed="300">
                    <img src="/Content/images/slider/slide-2.jpg" alt="" data-bgposition="center top" data-bgfit="cover"
                         data-bgrepeat="no-repeat">
                </li>
                <li data-transition="random" data-slotamount="7" data-masterspeed="300">
                    <img src="/Content/images/slider/slide-3.jpg" alt="" data-bgposition="center top" data-bgfit="cover"
                         data-bgrepeat="no-repeat">
                </li>
            </ul>
        </div>

    </div>
    <script type="text/javascript">
        var tpj = jQuery;
        tpj.noConflict();
        var revapi3;

        tpj(document).ready(function () {

            if (tpj('#rev_slider_3_1').revolution == undefined)
                revslider_showDoubleJqueryError('#rev_slider_3_1');
            else
                revapi3 = tpj('#rev_slider_3_1').show().revolution(
                    {
                        dottedOverlay: "none",
                        delay: 9000,
                        startwidth: 1170,
                        startheight: 520,
                        hideThumbs: 200,

                        thumbWidth: 100,
                        thumbHeight: 50,
                        thumbAmount: 4,

                        navigationType: "none",
                        navigationArrows: "solo",
                        navigationStyle: "round",

                        touchenabled: "on",
                        onHoverStop: "on",

                        navigationHAlign: "center",
                        navigationVAlign: "bottom",
                        navigationHOffset: 0,
                        navigationVOffset: 20,

                        soloArrowLeftHalign: "left",
                        soloArrowLeftValign: "center",
                        soloArrowLeftHOffset: 20,
                        soloArrowLeftVOffset: 0,

                        soloArrowRightHalign: "right",
                        soloArrowRightValign: "center",
                        soloArrowRightHOffset: 20,
                        soloArrowRightVOffset: 0,

                        shadow: 0,
                        fullWidth: "on",
                        fullScreen: "off",

                        stopLoop: "off",
                        stopAfterLoops: -1,
                        stopAtSlide: -1,

                        shuffle: "off",
                        autoHeight: "off",
                        forceFullWidth: "off",

                        hideThumbsOnMobile: "on",
                        hideBulletsOnMobile: "on",
                        hideArrowsOnMobile: "on",
                        hideThumbsUnderResolution: 0,
                    });
        });
    </script>
</div>
<!-- Quick Message -->
<div class="quick-message">
    <div class="quick-info" data-aos="fade-right" data-aos-duration="1500" data-aos-delay="100">
        <h1>Umang</h1>
        <div class="border-bottom"></div>
        <p><span class="cool-italic">Umang (meaning enthusiasm)</span> is an empowerment-integrated and norm-shifting model that addresses the issue of child/early marriage of adolescent girls in Jharkhand.</p>
    </div>
    <div class="quick-graphic">
        <img src="~/Content/images/girl-design-work.jpg" alt="girl art design" class="girl-work" data-aos="fade-down" data-aos-duration="1500" data-aos-delay="200" />
        <img src="~/Content/images/women-confidence.jpg" alt="woemn in confidence" class="woemn-confidence" data-aos="fade-up" data-aos-duration="1500" data-aos-delay="200" />
    </div>
</div>
<!-- AIM -->
<div class="umang-aim">
    <h2 data-aos="fade-up" data-aos-duration="1500" data-aos-delay="100">Aim</h2>
    <div class="bord" data-aos="fade-up" data-aos-duration="1500" data-aos-delay="100"></div>
    <div class="aim-flex">
        <div class="aim-content" data-aos="fade-right" data-aos-duration="1500" data-aos-delay="100">
            <p>Project Umang aims to reduce incidence of child/early marriage in high-prevalence districts in Jharkhand and empower adolescent girls.</p>
            <p><span class="text-stylish">PCI India has partnered with Jharkhand State Livelihood Promotion Society (JSLPS) to pilot the model in Jamtara and Godda districts of the state.</span></p>
        </div>
        <div class="aim-graphic">
            <img src="~/Content/images/girl-cycling.jpg" alt="girl cycling" data-aos="fade-left" data-aos-duration="1500" data-aos-delay="100"/>
        </div>
    </div>    
</div>
<!-- Objectives -->
<div class="objectives-content">
    <div class="title-round" data-aos="fade-right" data-aos-duration="1500" data-aos-delay="100">
        <span>Objectives</span>
    </div>
    <ul>
        <li class="obj-bgr-1" data-aos="fade-left" data-aos-duration="1500" data-aos-delay="250"><span class="obj-icon1"><i class="fa fa-female"></i></span> Capacitate women collectives for create an enabling environment & encourage adolescent girls to fulfil their aspirations.</li>
        <li class="obj-bgr-2" data-aos="fade-left" data-aos-duration="1500" data-aos-delay="300"><span class="obj-icon2"><i class="fa fa-child"></i></span> Establish a scalable & sustainable model for addressing child/early marriage through SHG platform</li>
    </ul>
</div>
<!-- Impact -->
<div class="umang-impact">
    <div class="umang-manage">
        <h2>Our Impact</h2>
        <p>Since its inception in 2019, Umang has been empowering mothers, who are able to stand against child/early marriage and nurture the aspirations of their daughters, thus enhancing prospects of a better future for 46,000+ adolescent girls in Godda & Jamtara.</p>
    </div>
</div>
<!-- Our Reach -->
<div class="our-reach">
    <div class="div-manage">
        <div class="impact-image">
            <h2>Our <span>Reach</span></h2>
            <div class="impact-point">
                <h3>38</h3>
                <p>District</p>
            </div>
            <div class="impact-point">
                <h3>534</h3>
                <p>Blocks</p>
            </div>
            <div class="impact-point">
                <h3>2.7 M</h3>
                <p>Pregnant Women</p>
            </div>
            <div class="impact-point">
                <h3>4,200</h3>
                <p>Doctors</p>
            </div>
            <div class="impact-point">
                <h3>2,500</h3>
                <p>Grade 'A' Nurses</p>
            </div>
            <div class="impact-point">
                <h3>1,80,000</h3>
                <p>Asha / AWW</p>
            </div>
        </div>
    </div>
    <div class="breaker"></div>
</div>
