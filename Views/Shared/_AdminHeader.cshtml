
@using UmangMicro.Manager
@{
    var u = MvcApplication.CUser;
}

<div class="admin-header">
    <div class="header-mob-show">
        <div class="admin-logo">
            <a href="/"><img src="~/Content/images/pci.png" class="logo-icon" alt="pci logo" /></a>
        </div>
        <div class="admin-user">
            <div id="primary_nav_wrap">
                <ul>
                    <li>
                        <a href="#">
                            <img src="~/Content/images/UserLogin.png" class="user-icon" />
                            <i class="fa fa-angle-down"></i>
                        </a>
                        <ul>
                            <h3>@u.Name</h3>
                            <li><a href="#">My Account</a></li>
                            @if (Request.IsAuthenticated)
                            {
                                using (Html.BeginForm("LogOff", "Account", FormMethod.Post, new { id = "logoutForm", @class = "navbar-right" }))
                                {
                                    @Html.AntiForgeryToken()
                                    <li><a class="btn-pill btn-shadow btn-shine btn btn-lg" href="javascript:document.getElementById('logoutForm').submit()" style="background: #2BBFCE !important; color:#ffffff !important; "><i class="dropdown-icon mdi  mdi-logout-variant"></i> Sign out</a></li>
                                }
                            }
                        </ul>
                    </li>
                </ul>
            </div>
        </div>
    </div>
    <div class="header-block">
        <div class="admin-logo web-show">
            <a href="/"><img src="~/Content/images/pci.png" class="logo-icon" alt="pci logo" /></a>
        </div>
        <div class="admin-navigation">
            @Html.Partial("_AdminNavbar")
        </div>
        <div class="admin-user web-show">
            <div id="primary_nav_wrap">
                <ul>
                    <li>
                        <a href="#">
                            <img src="~/Content/images/UserLogin.png" class="user-icon" />
                            <i class="fa fa-angle-down"></i>
                        </a>
                        <ul>
                            <h3>@u.Name</h3>
                            <li><a href="#">My Account</a></li>
                            @if (Request.IsAuthenticated)
                            {
                                using (Html.BeginForm("LogOff", "Account", FormMethod.Post, new { id = "logoutForm", @class = "navbar-right" }))
                                {
                                    @Html.AntiForgeryToken()
                                    <li><a class="btn-pill btn-shadow btn-shine btn btn-lg" href="javascript:document.getElementById('logoutForm').submit()" style="background: #2BBFCE !important; color:#ffffff !important; "><i class="dropdown-icon mdi  mdi-logout-variant"></i> Sign out</a></li>
                                }
                            }
                        </ul>
                    </li>
                </ul>
            </div>
        </div>
    </div>
</div>

