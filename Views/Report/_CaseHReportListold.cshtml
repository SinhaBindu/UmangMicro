@using System.Data
@using UmangMicro.Manager
@{
    ViewBag.Title = "RIASEC Test Result List";
    DataTable dt = new DataTable();
    if (Model != null)
    {
        dt = Model;
    }
}
<strong>RIASEC Test</strong>
<div class="row row-deck">
    <div class="col-lg-12 col-md-12">
        <div class="card">
            <div class="table-responsive">
                <table class="table table-bordered table-hover dt-responsive display" id="DataList" width="100%">
                    <thead>
                        <tr>
                            <th>SrNo.</th>
                            <th>No of <br />Case History</th>
                            <th>No of <br />RIASEC Test</th>
                            <th>CaseID</th>
                            <th>Date of <br />counselling</th>
                            <th>Student Name</th>
                            <th>District</th>
                            <th>Block</th>
                            <th>School</th>
                        </tr>
                    </thead>
                    <tbody>
                        @{
                            int sno = 1; int indx = 0;
                            if (Model != null)
                            {
                                foreach (DataRow dr in dt.Rows)
                                {
                                    <tr>
                                        <td class="text-center">@(sno++)</td>
                                        <td class="text-center" style="text-wrap: wrap;"><a href="~/Counsellor/CaseHDetail?=?RowId=0&&CaseID=@dr["CaseID"]"><strong>@dr["NoOfCaseH"]</strong></a></td>
                                        <td class="text-center" style="text-wrap: wrap;"><a href="~/Test/RCResultDetail?=?RowId=0&&CaseID=@dr["CaseID"]"><strong>@dr["NoOfRIASECTest"]</strong></a></td>
                                        <td class="text-center" style="text-wrap: wrap;">@dr["CaseID"]</td>
                                        <td class="text-center" style="text-wrap: wrap;">@(CommonModel.FormateDtDMY(dr["DOC"].ToString()))</td>
                                        <td class="text-left" style="text-wrap: wrap;">@dr["StudentName"]</td>
                                        <td class="text-left" style="text-wrap: wrap;">@dr["district_name"]</td>
                                        <td class="text-left" style="text-wrap: wrap;">@dr["block_name"]</td>
                                        <td class="text-left" style="text-wrap: wrap;">@dr["school_name"]</td>
                                    </tr>
                                    indx++;
                                }
                            }
                            else
                            {
                                <tr><td colspan="9" class="text-danger"><strong> Record Not Found !!</strong></td></tr>
                            }
                        }

                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>
